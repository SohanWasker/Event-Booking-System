<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AdminDashboardController">

  <top>
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
      <Label text="Admin Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      <Pane HBox.hgrow="ALWAYS"/>
      <Button text="Logout" onAction="#logout"/>
    </HBox>
  </top>

  <center>
    <VBox spacing="10">
      <TableView fx:id="eventTable" prefHeight="300">
        <columns>
          <TableColumn fx:id="titleCol" text="Title" prefWidth="200"/>
          <TableColumn fx:id="scheduleCol" text="Schedules" prefWidth="300"/>
          <TableColumn fx:id="disabledCol" text="Disabled" prefWidth="100"/>
        </columns>
      </TableView>
    </VBox>
  </center>

  <bottom>
    <VBox spacing="10" alignment="CENTER">
      <HBox spacing="10" alignment="CENTER">
        <Button fx:id="disableButton" text="Disable" onAction="#onDisable"/>
        <Button fx:id="enableButton" text="Enable" onAction="#onEnable"/>
      </HBox>
      <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addButton" text="Add Event" onAction="#onAdd"/>
        <Button fx:id="deleteButton" text="Delete Event" onAction="#onDelete"/>
        <Button fx:id="modifyButton" text="Modify Event" onAction="#onModify"/>
        <Button text="View All Orders" onAction="#onViewAllOrders"/>
      </HBox>
    </VBox>
  </bottom>

</BorderPane>
